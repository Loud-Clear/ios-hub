# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'iOS Hub' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  # use_frameworks!
  inhibit_all_warnings!

  # Pods for iOS Hub
  pod 'Typhoon'
  pod 'libextobjc/EXTScope'
  pod 'KVOController'

  pod 'FastCoding'
  pod 'SAMKeychain'
  
  pod 'MTAnimation' # For DisplayManager animation
  pod 'Aspects', :git => 'https://github.com/steipete/Aspects.git', :tag => '1.4.2'
  pod 'CTObjectiveCRuntimeAdditions'
  
  pod 'SDWebImage', '~> 3.0'
  pod 'PINCache'
  pod 'AFNetworking'
  pod 'TPDWeakProxy'

  pod 'PureLayout'
  pod 'TPKeyboardAvoiding'

  pod 'CocoaLumberjack'
  pod 'BugfenderSDK/ObjC', '~> 1.4'

  pod 'TyphoonRestClient'

  pod 'BaseModel'

  target 'iOS HubTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'OCMock'
  end

end
